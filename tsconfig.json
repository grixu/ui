{
  "compilerOptions": {
    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,

    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,

    "noEmit": false,
    "declaration": true,
    "sourceMap": true,
    "emitDeclarationOnly": true,

    "esModuleInterop": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "lib": ["esnext", "dom"],
    "types": [
      "webpack-env",
      "node",
      "jest",
      "./shims-vue"
    ]
  },
  "exclude": [
    "node_modules",
    "stories",
    "dist"
  ]
}
