{
  "compilerOptions": {
    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,

    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,

    "outDir": "dist/types",
    "noEmit": false,
    "declaration": true,
    "sourceMap": true,

    "esModuleInterop": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "lib": ["esnext", "dom"],
    "types": [
      "webpack-env",
      "unplugin-icons/types/vue",
      "node",
      "jest"
    ],
    "plugins": [
      {
        "name": "@vuedx/typescript-plugin-vue",
      }
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "types"
  ],
  "exclude": [
    "node_modules",
    "stories",
    "dist"
  ]
}
